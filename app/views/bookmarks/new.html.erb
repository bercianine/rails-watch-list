<div class="row justify-content-center">
  <div class="col-4">
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.association :movie %>
      <%= f.input :comment %>
      <%= f.hidden_field :list_id, value: @list.id %>
      <div class="d-flex" style="gap: 16px;">
        <%= link_to "Cancel", list_path(@list), class: "btn btn-outline-secondary w-100 mt-4" %>
        <%= f.button :submit, { class: "btn btn-primary w-100 mt-4" } %>
      </div>
    <% end %>
  </div>
</div>
