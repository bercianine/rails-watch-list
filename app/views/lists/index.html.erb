<div class="row justify-content-center">
  <div class="col-12 col-lg-4">
    <h4 class="text-center mb-5">🎬 Your lists</h4>
  </div>
</div>
<div class="main-grid">
  <% @lists.each do |list| %>
    <%= link_to(list_path(list)) do %>
        <% if list.photo.attached? %> <div class="card-list" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
        url('<%= cl_image_path list.photo.key, crop: :fill %>')"> <% else %> <div class="card-list-normal"> <% end %>
          <h5 class="card-title"><%= list.name %></h5>
      </div>
    <% end %>
  <% end %>
</div>
<br>
<div class="row justify-content-center">
  <div class="col-12 text-center">
    <%= link_to "New list", lists_new_path, class: "btn btn-primary mt-3" %>
  </div>
</div>
